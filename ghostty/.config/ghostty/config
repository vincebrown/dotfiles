# Theme
theme = Everforest Dark Hard
background-opacity = 0.85
background-blur = false
title = " "
maximize = true
window-padding-x = 12
window-padding-y = 12
alpha-blending = native

# Font size and line height
font-size = 16
adjust-cell-height = 50%
font-family = "Berkeley Mono"

# enable opentype features
font-feature = +liga # standard ligatures (-> becomes →, != becomes ≠)
font-feature = +calt # contextual alternates (adjusts glyphs based on context)
font-feature = +ss01 # stylistic set 1 (alternate glyph designs)
font-feature = +ss02 # stylistic set 2 (more alternates)
font-feature = +zero # slashed zero (0 vs o distinction)

# Mac OS specific
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true
macos-window-buttons = hidden
macos-icon = glass

mouse-hide-while-typing = true
window-title-font-family = "Berkeley Mono"
shell-integration-features = cursor

# Cursor
cursor-click-to-move = true
cursor-color ="#4F5B58"
cursor-style = "block"
custom-shader = shaders/cursor_smear.glsl

# Keybinds
keybind = super+j=goto_split:down
keybind = super+k=goto_split:up
keybind = super+l=goto_split:right
keybind = super+h=goto_split:left

keybind = shift+enter=text:\n
